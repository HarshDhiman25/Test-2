@model Property_Mangement.Models.Property

@{
    ViewData["Title"] = Model.PropertyId == 0 ? "Create Property" : "Edit Property";
}

<h1>@ViewData["Title"]</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="OwnerName"></label>
        <input asp-for="OwnerName" class="form-control" />
        <span asp-validation-for="OwnerName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PropertyType"></label>
        <input asp-for="PropertyType" class="form-control" />
        <span asp-validation-for="PropertyType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RegistrationDate"></label>
        <input asp-for="RegistrationDate" class="form-control"
               min="@DateTime.Now.ToString("yyyy-MM-dd")"
               max="@DateTime.Now.AddYears(1).ToString("yyyy-MM-dd")" />
        <span asp-validation-for="RegistrationDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <br />

    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input type="file" name="imageFile" class="form-control-file" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Save</button>
</form>
